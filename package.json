{
  "name": "graphql-template",
  "version": "1.0.0",
  "description": "GraphQL template",
  "homepage": "https://github.com/carlocorradini/graphql-template",
  "bugs": {
    "url": "https://github.com/carlocorradini/graphql-template/issues",
    "email": "carlo.corradini@studenti.unitn.it"
  },
  "main": "./build/app.js",
  "private": true,
  "scripts": {
    "clean": "npx rimraf build && npx rimraf log",
    "update": "npx ncu -u && npm install",
    "lint": "npx eslint --ext .ts \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest --forceExit --no-watchman --detectOpenHandles",
    "prebuild": "npm run clean",
    "build": "npx ttsc --p ./tsconfig.json",
    "postbuild": "npx ts-node scripts/build.ts",
    "start": "node build/app.js",
    "start:dev": "npx ts-node-dev --prefer-ts true --no-notify --rs --clear --exit-child -r tsconfig-paths/register --watch src --respawn --transpile-only src/app.ts"
  },
  "author": "Carlo Corradini",
  "engines": {
    "node": "^10.16.0",
    "npm": "^6.9.0"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.19.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-jwt-blacklist": "git+https://github.com/carlocorradini/express-jwt-blacklist.git",
    "graphql": "^15.4.0",
    "graphql-scalars": "^1.4.1",
    "helmet": "^4.2.0",
    "ioredis": "^4.19.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.29",
    "typeorm-typedi-extensions": "^0.2.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.8",
    "@types/express-jwt": "0.0.42",
    "@types/ioredis": "^4.17.7",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.164",
    "@types/node": "^14.14.6",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "lint-staged": "^10.5.1",
    "npm-check-updates": "^9.2.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.5",
    "typescript-transform-paths": "^2.0.2"
  }
}
