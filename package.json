{
  "name": "graphql-template",
  "version": "1.0.0",
  "description": "GraphQL template",
  "homepage": "https://github.com/carlocorradini/graphql-template",
  "bugs": {
    "url": "https://github.com/carlocorradini/graphql-template/issues",
    "email": "carlo.corradini@studenti.unitn.it"
  },
  "main": "./build/app.js",
  "private": true,
  "scripts": {
    "clean": "npx rimraf build && npx rimraf log",
    "update": "npx ncu -u && npm install",
    "prettify": "npx prettier --write src/**/*",
    "prettify:staged": "npx prettier --write",
    "lint": "npx eslint --fix src/**/*",
    "lint:staged": "npx eslint --fix",
    "prebuild": "npm run clean",
    "build": "npx ttsc --p ./tsconfig.json",
    "postbuild": "npx ts-node script/build.ts",
    "test": "jest",
    "test:staged": "jest --bail --findRelatedTests",
    "prestart": "npm install --only=prod",
    "start": "npx cross-env NODE_ENV=\"production\" node app.js",
    "prestart:prod": "cd build && npm install --only=prod",
    "start:prod": "cd build && npx cross-env NODE_ENV=\"production\" node app.js",
    "start:dev": "npx ts-node-dev --prefer-ts true --no-notify --rs --clear -r tsconfig-paths/register --watch src --respawn --transpile-only src/app.ts"
  },
  "author": "Carlo Corradini",
  "engines": {
    "node": "^10.16.0",
    "npm": "^6.9.0"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.18.1",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.12.2",
    "cross-env": "^7.0.2",
    "envalid": "^6.0.2",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.28",
    "typeorm-typedi-extensions": "^0.2.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "npm-check-updates": "^9.0.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.3",
    "typescript-transform-paths": "^2.0.1"
  }
}