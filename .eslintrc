{
  "root": true,
  "env": {
    "es2020": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-tsdoc",
    "prettier",
    "import",
    "jest"
  ],
  "extends": [
    "airbnb-typescript/base",
    "prettier",
    "prettier/@typescript-eslint",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "parserOptions": {
    "project": [
      "tsconfig.json",
      "packages/*/tsconfig.json",
      "packages/*/tests/tsconfig.json"
    ],
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "tsdoc/syntax": "warn"
  }
}